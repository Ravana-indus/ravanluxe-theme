<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  {{ content_for_header }}

  <style>
    /* CSS Variables matching theme */
    :root {
      --color-background: #FFFFFF;
      --color-foreground: #1A1A1A;
      --color-accent: #D4AF37;
      --color-secondary-background: #F5F5F5;
      --page-width: 1440px;
      --page-margin: 5vw;
    }

    /* Base Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      color: var(--color-foreground);
      background-color: var(--color-background);
      line-height: 1.6;
      font-size: 16px;
      -webkit-font-smoothing: antialiased;
    }

    /* Checkout Container */
    .checkout-container {
      max-width: var(--page-width);
      margin: 0 auto;
      padding: 0 var(--page-margin);
    }

    /* Header Styling */
    .main-header {
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      padding: 1.5rem 0;
      margin-bottom: 3rem;
    }

    .main-header__logo {
      text-align: center;
    }

    .main-header__logo a {
      font-size: 1.5rem;
      font-weight: 400;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: var(--color-foreground);
      text-decoration: none;
    }

    .main-header__logo img {
      max-height: 50px;
      width: auto;
    }

    /* Breadcrumb */
    .breadcrumb {
      text-align: center;
      margin-bottom: 2rem;
      font-size: 0.875rem;
      letter-spacing: 0.05em;
    }

    .breadcrumb a {
      color: var(--color-foreground);
      text-decoration: none;
      opacity: 0.6;
      transition: opacity 0.3s ease;
    }

    .breadcrumb a:hover {
      opacity: 1;
    }

    .breadcrumb__separator {
      margin: 0 0.5rem;
      opacity: 0.4;
    }

    .breadcrumb__current {
      opacity: 1;
    }

    /* Main Content */
    .main-content {
      display: grid;
      grid-template-columns: 1fr 400px;
      gap: 4rem;
      margin-bottom: 4rem;
    }

    /* Form Sections */
    .section {
      margin-bottom: 2.5rem;
    }

    .section__header {
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .section__title {
      font-size: 1.125rem;
      font-weight: 400;
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }

    /* Form Fields */
    .field {
      margin-bottom: 1.25rem;
    }

    .field__label {
      display: block;
      font-size: 0.8125rem;
      letter-spacing: 0.05em;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
    }

    .field__input {
      width: 100%;
      padding: 0.875rem 1rem;
      border: 1px solid var(--color-foreground);
      font-size: 0.875rem;
      font-family: inherit;
      background-color: var(--color-background);
      color: var(--color-foreground);
      transition: border-color 0.3s ease;
    }

    .field__input:focus {
      outline: none;
      border-color: var(--color-accent);
    }

    .field__input::placeholder {
      color: rgba(0, 0, 0, 0.4);
    }

    .field--half {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    select.field__input {
      cursor: pointer;
      appearance: none;
      background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L6 6L11 1' stroke='%231A1A1A' stroke-width='1.5' stroke-linecap='round'/%3E%3C/svg%3E");
      background-repeat: no-repeat;
      background-position: right 1rem center;
      padding-right: 2.5rem;
    }

    /* Order Summary */
    .order-summary {
      position: sticky;
      top: 2rem;
      background-color: var(--color-secondary-background);
      padding: 2rem;
      height: fit-content;
    }

    .order-summary__title {
      font-size: 1.25rem;
      font-weight: 400;
      letter-spacing: 0.05em;
      margin-bottom: 2rem;
      text-transform: uppercase;
    }

    .order-summary__items {
      margin-bottom: 2rem;
    }

    .order-summary__item {
      display: grid;
      grid-template-columns: 60px 1fr auto;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .order-summary__item:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }

    .order-summary__image {
      width: 60px;
      aspect-ratio: 3 / 4;
      background-color: var(--color-background);
      overflow: hidden;
    }

    .order-summary__image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .order-summary__details {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .order-summary__item-title {
      font-size: 0.875rem;
      font-weight: 400;
      letter-spacing: 0.02em;
    }

    .order-summary__item-variant {
      font-size: 0.75rem;
      opacity: 0.6;
    }

    .order-summary__item-quantity {
      font-size: 0.75rem;
      opacity: 0.6;
    }

    .order-summary__item-price {
      font-size: 0.875rem;
      font-weight: 500;
      text-align: right;
    }

    /* Pricing Rows */
    .order-summary__totals {
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      padding-top: 1.5rem;
    }

    .order-summary__row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 1rem;
      font-size: 0.875rem;
    }

    .order-summary__total {
      display: flex;
      justify-content: space-between;
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      font-size: 1.125rem;
      font-weight: 500;
      letter-spacing: 0.02em;
    }

    /* Buttons */
    .button {
      width: 100%;
      padding: 1.125rem;
      background-color: var(--color-foreground);
      color: var(--color-background);
      border: 1px solid var(--color-foreground);
      font-size: 0.875rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
      font-family: inherit;
    }

    .button:hover {
      background-color: var(--color-background);
      color: var(--color-foreground);
    }

    .button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .button--secondary {
      background-color: var(--color-background);
      color: var(--color-foreground);
      border: 1px solid var(--color-foreground);
    }

    .button--secondary:hover {
      background-color: var(--color-foreground);
      color: var(--color-background);
    }

    /* Footer */
    .main-footer {
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      padding: 2rem 0;
      text-align: center;
      font-size: 0.75rem;
      opacity: 0.6;
    }

    .main-footer__links {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-bottom: 1rem;
    }

    .main-footer__link {
      color: var(--color-foreground);
      text-decoration: none;
      transition: opacity 0.3s ease;
    }

    .main-footer__link:hover {
      opacity: 0.6;
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .main-content {
        grid-template-columns: 1fr;
        gap: 3rem;
      }

      .order-summary {
        position: relative;
        top: 0;
        order: -1;
      }
    }

    @media (max-width: 768px) {
      .main-header {
        padding: 1rem 0;
        margin-bottom: 2rem;
      }

      .main-header__logo a {
        font-size: 1.25rem;
      }

      .main-content {
        gap: 2rem;
        margin-bottom: 3rem;
      }

      .order-summary {
        padding: 1.5rem;
      }

      .field--half {
        grid-template-columns: 1fr;
      }
    }

    /* Shopify Checkout Specific Overrides */
    .step__footer__continue-btn,
    [data-step] button[type="submit"] {
      width: 100%;
      padding: 1.125rem;
      background-color: var(--color-foreground) !important;
      color: var(--color-background) !important;
      border: 1px solid var(--color-foreground) !important;
      font-size: 0.875rem !important;
      letter-spacing: 0.1em !important;
      text-transform: uppercase !important;
      font-family: inherit !important;
      transition: all 0.3s ease !important;
    }

    .step__footer__continue-btn:hover,
    [data-step] button[type="submit"]:hover {
      background-color: var(--color-background) !important;
      color: var(--color-foreground) !important;
    }

    /* Payment Badges */
    .payment-icons {
      display: flex;
      gap: 0.5rem;
      justify-content: center;
      margin-top: 1.5rem;
      opacity: 0.6;
    }

    .payment-icon {
      height: 20px;
      width: auto;
    }
  </style>
</head>

