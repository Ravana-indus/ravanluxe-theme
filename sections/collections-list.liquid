<div class="collections-list">
  <div class="collections-list__header">
    <h1 class="collections-list__title">{{ section.settings.title }}</h1>
    {% if section.settings.description %}
      <p class="collections-list__description">{{ section.settings.description }}</p>
    {% endif %}
  </div>

  <div class="collections-grid">
    {% for collection in collections %}
      {% unless collection.handle == 'frontpage' %}
        <a href="{{ collection.url }}" class="collection-item">
          <div class="collection-item__image">
            {% if collection.image %}
              {{ collection.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: collection.title }}
            {% elsif collection.products.first.featured_image %}
              {{ collection.products.first.featured_image | image_url: width: 800 | image_tag: loading: 'lazy', alt: collection.title }}
            {% else %}
              <div class="collection-item__placeholder">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <div class="collection-item__overlay">
              <h2 class="collection-item__title">{{ collection.title }}</h2>
              <p class="collection-item__count">{{ collection.products_count }} products</p>
            </div>
          </div>
        </a>
      {% endunless %}
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .collections-list {
    padding: 3rem 0 6rem;
    max-width: var(--page-width);
    margin: 0 auto;
    padding-left: var(--page-margin);
    padding-right: var(--page-margin);
  }

  .collections-list__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .collections-list__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .collections-list__description {
    font-size: 1.125rem;
    line-height: 1.8;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .collection-item {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
  }

  .collection-item__image {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    background-color: var(--color-secondary-background);
  }

  .collection-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .collection-item__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.3;
  }

  .collection-item__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: white;
    transform: translateY(0);
    transition: all 0.6s ease;
  }

  .collection-item__title {
    font-size: 1.75rem;
    font-weight: 400;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    transform: translateY(0);
    transition: transform 0.6s ease;
  }

  .collection-item__count {
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.9;
    transform: translateY(20px);
    transition: transform 0.6s ease;
  }

  .collection-item:hover .collection-item__image img {
    transform: scale(1.1);
  }

  .collection-item:hover .collection-item__title {
    transform: translateY(-10px);
  }

  .collection-item:hover .collection-item__count {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .collections-list {
      padding: 2rem var(--page-margin) 4rem;
    }

    .collections-list__header {
      margin-bottom: 2.5rem;
    }

    .collections-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .collection-item__overlay {
      padding: 1.5rem;
    }

    .collection-item__title {
      font-size: 1.5rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collections List",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Collections"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our curated collections"
    }
  ]
}
{% endschema %}