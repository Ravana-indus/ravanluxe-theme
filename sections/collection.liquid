<div class="collection-page">
  <div class="collection-header">
    <h1 class="collection-title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-description">{{ collection.description }}</div>
    {% endif %}
    <p class="collection-count">{{ collection.products_count }} products</p>
  </div>

  <div class="collection-products">
    {% paginate collection.products by 12 %}
      <div class="product-grid">
        {% for product in collection.products %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image">
                {% if product.featured_image %}
                  {{ product.featured_image | image_url: width: 800 | image_tag: loading: 'lazy', alt: product.title }}
                  {% if product.images[1] %}
                    <div class="product-card__image-hover">
                      {{ product.images[1] | image_url: width: 800 | image_tag: loading: 'lazy', alt: product.title }}
                    </div>
                  {% endif %}
                {% endif %}
              </div>

              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                <div class="product-card__price">
                  {% if product.compare_at_price > product.price %}
                    <span class="product-card__price-compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="product-card__price-regular">{{ product.price | money }}</span>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</div>

{% stylesheet %}
  .collection-page {
    padding: 3rem 0 6rem;
    max-width: var(--page-width);
    margin: 0 auto;
    padding-left: var(--page-margin);
    padding-right: var(--page-margin);
  }

  .collection-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .collection-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .collection-description {
    font-size: 1.125rem;
    line-height: 1.8;
    max-width: 700px;
    margin: 0 auto 1rem;
    opacity: 0.9;
  }

  .collection-count {
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.6;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem 1.5rem;
    margin-bottom: 4rem;
  }

  .product-card {
    position: relative;
  }

  .product-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .product-card__image {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background-color: var(--color-secondary-background);
    margin-bottom: 1rem;
  }

  .product-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .product-card__image-hover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  .product-card:hover .product-card__image img {
    transform: scale(1.05);
  }

  .product-card:hover .product-card__image-hover {
    opacity: 1;
  }

  .product-card__info {
    text-align: center;
  }

  .product-card__title {
    font-size: 1rem;
    font-weight: 400;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
  }

  .product-card__price {
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .product-card__price-compare {
    text-decoration: line-through;
    opacity: 0.5;
    margin-right: 0.5rem;
  }

  .pagination {
    text-align: center;
    margin-top: 3rem;
  }

  .pagination a,
  .pagination span {
    display: inline-block;
    padding: 0.75rem 1.25rem;
    margin: 0 0.25rem;
    border: 1px solid var(--color-foreground);
    text-decoration: none;
    color: var(--color-foreground);
    transition: all 0.3s ease;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .pagination a:hover {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }

  .pagination .current {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }

  @media (max-width: 768px) {
    .collection-page {
      padding: 2rem var(--page-margin) 4rem;
    }

    .collection-header {
      margin-bottom: 2.5rem;
    }

    .product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem 1rem;
    }

    .product-card__title {
      font-size: 0.875rem;
    }

    .product-card__price {
      font-size: 0.8125rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection Page",
  "settings": []
}
{% endschema %}
